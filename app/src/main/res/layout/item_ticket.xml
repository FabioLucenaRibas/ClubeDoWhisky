<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">


            <ImageView
                android:id="@+id/drink_photos"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_columnSpan="1"
                android:layout_marginRight="5dp"
                android:layout_rowSpan="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal">

                <TextView
                    android:id="@+id/drink_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1"
                    android:layout_rowSpan="1" />

                <ImageButton
                    android:id="@+id/remove_dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drink_name"
                    android:layout_toStartOf="@+id/drink_quantities"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_remove_dose"
                    android:elevation="0dp" />

                <EditText
                    android:id="@+id/drink_quantities"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drink_name"
                    android:layout_toLeftOf="@+id/add_dose"
                    android:ems="10"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/add_dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/drink_name"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_add_dose" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>