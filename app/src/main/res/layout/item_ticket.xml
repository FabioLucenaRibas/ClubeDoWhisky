<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_margin="5dp"
            android:layout_weight="1.49">

            <TextView
                android:id="@id/drink_name"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/drink_descricao"
                android:layout_width="260dp"
                android:layout_height="36dp"
                android:layout_below="@id/drink_name"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/drink_label_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/drink_descricao"
                android:layout_margin="5dp"
                android:text="@string/label_starting_at"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/drink_preco"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/drink_descricao"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/drink_label_preco"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@id/drink_photos"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/drink_name"
                android:contentDescription="@string/drink_photo" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
